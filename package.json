{
  "name": "inventory-manager",
  "version": "1.0.0",
  "description": "Inventory manager with Electron",
  "scripts": {
    "dev": "cross-env NODE_ENV=dev webpack serve --config ./webpack.config.js",
    "prod": "cross-env NODE_ENV=production webpack serve --config ./webpack.config.js",
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "npm run build && electron ./dist/main/index.js",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "Erwin G",
  "devDependencies": {
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "electron": "^11.2.1",
    "electron-builder": "^22.9.1",
    "eslint": "^7.3.1",
    "postcss": "^8.2.4",
    "postcss-loader": "^4.2.0",
    "postcss-nested": "^5.0.3",
    "typescript": "^4.0.0"
  },
  "dependencies": {
    "compression-webpack-plugin": "^7.1.2",
    "cross-env": "^7.0.3",
    "css-loader": "^5.0.1",
    "html-webpack-plugin": "^4.5.1",
    "mini-css-extract-plugin": "^1.3.4",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-hook-form": "^6.14.2",
    "react-modal": "^3.12.1",
    "react-number-format": "^4.4.4",
    "react-table": "^7.6.3",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^4.0.0",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.0.14",
    "typeorm": "^0.2.30",
    "webfonts-loader": "^7.1.0",
    "webpack": "^5.17.0",
    "webpack-bundle-analyzer": "^4.4.0",
    "webpack-cli": "^4.4.0",
    "webpack-dev-server": "^3.11.2"
  }
}
