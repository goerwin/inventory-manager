{
  "name": "inventory-manager",
  "version": "2.1.0",
  "description": "Inventory manager with Electron",
  "main": "./distMain/main/index.js",
  "scripts": {
    "clean": "shx rm -rf dist && shx rm -rf distMain && shx rm -rf distApps",
    "renderer-build": "webpack --config ./webpack.config.js",
    "renderer-build-dev": "cross-env NODE_ENV=dev npm run renderer-build",
    "renderer-start-server": "webpack serve --config ./webpack.config.js",
    "renderer-start-server-dev": "cross-env NODE_ENV=dev npm run renderer-start-server",
    "main-build": "tsc",
    "main-build-dev": "cross-env NODE_ENV=dev npm run main-build",
    "start": "npm run main-build && electron ./distMain/main/index.js",
    "start-dev": "cross-env NODE_ENV=dev npm run start",
    "build": "npm run clean && npm run renderer-build && npm run main-build",
    "build-win": "npm run build && electron-builder --win && shx rm -rf distApps/**/*-unpacked",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "Erwin G",
  "devDependencies": {
    "@types/nodemailer": "^6.4.1",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "compression-webpack-plugin": "^7.1.2",
    "css-loader": "^5.0.1",
    "electron": "^11.2.1",
    "electron-builder": "^22.9.1",
    "eslint": "^7.3.1",
    "html-webpack-plugin": "^5.0.0",
    "mini-css-extract-plugin": "^1.3.4",
    "postcss": "^8.2.4",
    "postcss-loader": "^4.2.0",
    "postcss-nested": "^5.0.3",
    "shx": "^0.3.3",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.0.14",
    "typescript": "^4.0.0",
    "webfonts-loader": "^7.1.0",
    "webpack": "^5.17.0",
    "webpack-bundle-analyzer": "^4.4.0",
    "webpack-cli": "^4.4.0",
    "webpack-dev-server": "^3.11.2"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "date-fns": "^2.16.1",
    "dotenv": "^8.2.0",
    "nodemailer": "^6.5.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-hook-form": "^6.14.2",
    "react-modal": "^3.12.1",
    "react-number-format": "^4.4.4",
    "react-query": "^3.13.10",
    "react-table": "^7.6.3",
    "react-toastify": "^7.0.3",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^4.0.0",
    "typeorm": "^0.2.30"
  },
  "build": {
    "appId": "co.erwin.inventory-manager",
    "productName": "Inventario",
    "copyright": "Copyright Â© 2021 ${author}",
    "directories": {
      "output": "distApps/${os}_${productName}_${arch}"
    },
    "files": [
      "dist/**/*",
      "distMain/**/*"
    ],
    "extraFiles": [
      {
        "from": "env.example.txt",
        "to": ".."
      },
      {
        "from": "env.example.txt",
        "to": "."
      }
    ],
    "win": {
      "asar": true,
      "artifactName": "${productName}.${ext}",
      "target": [
        {
          "target": "portable",
          "arch": [
            "ia32"
          ]
        }
      ]
    }
  }
}
